<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="todo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SamsungTask">
        <activity
            android:name="com.samsung.todo.AddTaskActivity"
            android:exported="false" />
        <activity
            android:name="com.samsung.todo.SplashActivity"
            android:exported="false" />
        <activity
            android:name="com.samsung.todo.auth.LogInActivity"
            android:exported="false" />
        <activity
            android:name="com.samsung.todo.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.samsung.todo.auth.CreateUserActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>